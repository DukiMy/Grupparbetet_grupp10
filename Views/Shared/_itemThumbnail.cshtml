@model Item

<div class="card mb-4 shadow-sm">
    @*<img src="@(string.IsNullOrEmpty(Model.MainImageUrl) ? "/img/noimage.png" : Model.MainImageUrl)" class="img-thumbnail" />*@
    @*<img src="@Url.Content(Model.ImgPath)" alt="Loading image">*@
    <img src="@Url.Content(Model.MainImageUrl)" alt="Loading image">
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Address) ? "Address is not available" : Model.Address)</h3>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "Description is not availabe": Model.Description)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-route="itemDetailsRoute" asp-route-id="@Model.Id"
                   class="btn btn-sm btn-outline-secondary">View details</a>
            </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.City) ? "NA" : Model.City)</small>
        </div>
    </div>
</div>
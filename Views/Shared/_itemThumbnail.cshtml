@using HomeFinder.ViewModels
@model ItemViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h3 class="card-title">@(string.IsNullOrEmpty(Model.Address) ? "Address is not available" : Model.Address)</h3>
            <h5 class="card-text">@(string.IsNullOrEmpty(Model.City) ? "City is not availabe": Model.City)</h5>
            <img src="@Url.Content(Model.MainImageUrl)" width="250" alt="Loading image">
        </div>

        <div class="col-md-4">
            <div class="row">
                <div class="col-6">
                    <ul class="list-group">
                        <li class="list-group-item"><span class="font-weight-bold">Pris - </span> @Model.Price</li>
                        <li class="list-group-item"><span class="font-weight-bold">Boyta - </span> @Model.LivingArea</li>
                        <li class="list-group-item"><span class="font-weight-bold">Antal rum - </span> @Model.NrOfRoom</li>
                    </ul>
                </div>
                <div class="col-6">
                    <ul class="list-group">
                        <li class="list-group-item"><span class="font-weight-bold">Fastighetstyp - </span> @Model.ItemType</li>
                        <li class="list-group-item"><span class="font-weight-bold">Tomtarea - </span> @Model.PlotArea</li>
                        <li class="list-group-item"><span class="font-weight-bold">Biarea - </span> @Model.GrossFloorArea</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <h4>@Model.Description</h4>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-route="itemDetailsRoute" asp-route-id="@Model.Id"
                   class="btn btn-sm btn-outline-secondary">Till objektsidan</a>
            </div>
        </div>

    </div>
    <br />
</div>




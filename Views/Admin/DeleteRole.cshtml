@using Microsoft.AspNetCore.Identity
@model IdentityRole


<h3>Du är på väg att ta bort "@Model.Name" </h3>
<h3>Detta går inte att ångra. </h3>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="mt-3">
    <button type="submit" class="btn-primary btn-danger"><i class="fa-solid fa-trash-can"></i></button>
    <div class="mt-2">
        <a asp-action ="ListRoles" class="btn btn-warning"><i class="fa-solid fa-ban"></i> Cancel</a>
    </div>
</form>
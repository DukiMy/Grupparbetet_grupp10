@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />

            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Input.CompanyName"></label>
                <input asp-for="Input.CompanyName" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Input.Address"></label>
                <input asp-for="Input.Address" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Input.ZipCode"></label>
                <input asp-for="Input.ZipCode" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Input.City"></label>
                <input asp-for="Input.City" class="form-control" />

            </div>

            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Input.Portrait" class="control-label"></label>
                    <div class="custom-file">
                        <input type="file" asp-for="Input.Portrait">
                    </div>
                <span asp-validation-for="Input.Portrait" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Portrait" class="control-label"></label>
                <div class="custom-file">
                    <input type="file" asp-for="Input.Portrait" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Välj fil</label>
                </div>
                <span asp-validation-for="Input.Portrait" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Spara</button>
        </form>
    </div>
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.PortraitURL))
            {
            <img src="@Url.Content(Model.PortraitURL)" width="250" alt="Loading image">
            }
        </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}